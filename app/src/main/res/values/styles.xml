<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/dark_yellow</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="android:spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:fontFamily">@font/app_font</item>

    </style>

    <style name="CustomToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="CustomTabTitle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/app_font</item>
    </style>
    <style name="DarkEditText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorHint">@color/average_grey</item>
        <item name="android:textColor">@color/average_grey</item>
        <item name="colorControlNormal">@color/average_grey</item>
    </style>

    <style name="CustomRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/yellow</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="CustomEditLayoutTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchIcon">@null</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@color/yellow</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/hint_search</item>
    </style>

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/spinner_bg</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/yellow</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/medium_grey</item>
        <item name="colorControlActivated">@color/rating_color</item>
    </style>

</resources>